include config.pug
block vars

html(lang='en')
  head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/style.css')
    title whatisleantv
    include analytics.pug
  body
    p.meta#title=title
    p.meta#link=link
    main
      iframe(src!=playlist + '&autoplay=1' allowfullscreen='')
      p=guide_name
      nav
        include ../../img/menu.svg
        ul
          if indev == true
            each item in nav
              li: a(href='../channel/' + item.toLowerCase().split(' ').join('-') + '.html')=item
          else
            each item in nav
              li: a(href='../channel/' + item.toLowerCase().split(' ').join('-'))=item

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='/js/menu.js')
